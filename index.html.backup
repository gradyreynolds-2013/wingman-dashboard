<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wingman Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
            background: linear-gradient(135deg, #0a0e27 0%, #0f1629 50%, #1a0f2e 100%);
            color: #e2e8f0;
            line-height: 1.6;
            min-height: 100vh;
            padding: 30px 20px;
            letter-spacing: 0.3px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 50px;
            padding: 0;
            border-bottom: 2px solid;
            border-image: linear-gradient(90deg, #00d4ff, #0099cc, transparent) 1;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 14px;
            font-size: 28px;
            font-weight: 800;
            background: linear-gradient(135deg, #00d4ff, #0099cc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .logo-emoji {
            font-size: 32px;
        }

        .last-updated {
            font-size: 12px;
            color: #94a3b8;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: rgba(15, 23, 42, 0.6);
            border: 1.5px solid rgba(0, 212, 255, 0.2);
            padding: 24px;
            border-radius: 12px;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, #00d4ff, #0099cc, transparent);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .stat-card:hover {
            border-color: rgba(0, 212, 255, 0.5);
            background: rgba(15, 23, 42, 0.8);
            transform: translateY(-2px);
        }

        .stat-card:hover::before {
            opacity: 1;
        }

        .stat-value {
            font-size: 36px;
            font-weight: 800;
            background: linear-gradient(135deg, #00d4ff, #0099cc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin: 12px 0;
        }

        .stat-label {
            font-size: 12px;
            color: #94a3b8;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .section {
            margin-bottom: 40px;
        }

        .section-title {
            font-size: 16px;
            font-weight: 700;
            margin-bottom: 24px;
            color: #f1f5f9;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            border-left: 4px solid;
            border-image: linear-gradient(180deg, #00d4ff, #0099cc) 1;
            padding-left: 14px;
        }

        .current-task {
            background: rgba(30, 41, 59, 0.8);
            border-left: 4px solid #10b981;
            padding: 24px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .task-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 12px;
            color: #f1f5f9;
        }

        .task-status {
            display: inline-block;
            background: #10b981;
            color: #0f172a;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            margin-bottom: 16px;
        }

        .progress-bar {
            width: 100%;
            height: 8px;
            background: #1e293b;
            border-radius: 4px;
            overflow: hidden;
            margin-top: 12px;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #60a5fa, #3b82f6);
            transition: width 0.3s ease;
        }

        .project-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .project-card {
            background: rgba(30, 41, 59, 0.8);
            border: 1px solid #334155;
            padding: 20px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .project-card:hover {
            border-color: #60a5fa;
            transform: translateY(-4px);
        }

        .project-name {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 8px;
            color: #f1f5f9;
        }

        .project-status {
            display: inline-block;
            font-size: 11px;
            padding: 4px 8px;
            border-radius: 4px;
            margin-bottom: 12px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .project-status.active {
            background: #10b981;
            color: #0f172a;
        }

        .project-status.planning {
            background: #f59e0b;
            color: #0f172a;
        }

        .project-description {
            font-size: 13px;
            color: #cbd5e1;
            margin-bottom: 12px;
        }

        .next-steps {
            font-size: 12px;
            color: #94a3b8;
        }

        .next-steps li {
            margin-left: 16px;
            margin-top: 4px;
        }

        .completion-list {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        .completion-item {
            background: rgba(30, 41, 59, 0.8);
            border-left: 4px solid #10b981;
            padding: 16px;
            border-radius: 6px;
        }

        .completion-title {
            font-weight: 600;
            color: #f1f5f9;
            margin-bottom: 4px;
        }

        .completion-time {
            font-size: 12px;
            color: #94a3b8;
        }

        .completion-description {
            font-size: 13px;
            color: #cbd5e1;
            margin-top: 8px;
        }

        .timeline {
            border-left: 2px solid #334155;
            padding-left: 20px;
            margin-left: 10px;
        }

        .timeline-item {
            margin-bottom: 30px;
            position: relative;
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: -27px;
            top: 0;
            width: 12px;
            height: 12px;
            background: #60a5fa;
            border: 3px solid #0f172a;
            border-radius: 50%;
        }

        .timeline-date {
            font-weight: 600;
            color: #f1f5f9;
            margin-bottom: 8px;
            font-size: 14px;
        }

        .timeline-events {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .timeline-event {
            font-size: 13px;
            color: #cbd5e1;
            padding: 6px 12px;
            background: rgba(96, 165, 250, 0.1);
            border-radius: 4px;
            border-left: 2px solid #60a5fa;
        }

        .wells-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 16px;
        }

        .well-card {
            background: rgba(30, 41, 59, 0.8);
            border: 1px solid #334155;
            padding: 20px;
            border-radius: 8px;
        }

        .well-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
        }

        .well-name {
            font-size: 18px;
            font-weight: 700;
            color: #f1f5f9;
        }

        .well-status {
            display: inline-block;
            font-size: 11px;
            padding: 4px 8px;
            border-radius: 4px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .well-status.complete {
            background: #10b981;
            color: #0f172a;
        }

        .well-status.in-progress {
            background: #f59e0b;
            color: #0f172a;
        }

        .well-status.planning {
            background: #64748b;
            color: #f1f5f9;
        }

        .well-docs {
            margin-top: 12px;
        }

        .doc-item {
            background: rgba(15, 23, 42, 0.5);
            padding: 10px;
            margin-bottom: 8px;
            border-radius: 4px;
            border-left: 3px solid #60a5fa;
            font-size: 12px;
        }

        .doc-type {
            color: #60a5fa;
            font-weight: 600;
            display: block;
            margin-bottom: 4px;
        }

        .doc-filename {
            color: #cbd5e1;
            word-break: break-word;
            font-size: 11px;
        }

        .doc-meta {
            color: #94a3b8;
            font-size: 10px;
            margin-top: 4px;
        }

        .wells-summary {
            background: rgba(30, 41, 59, 0.8);
            border: 1px solid #334155;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            text-align: center;
        }

        .summary-stat {
            display: flex;
            flex-direction: column;
        }

        .summary-value {
            font-size: 28px;
            font-weight: 700;
            color: #60a5fa;
            margin-bottom: 4px;
        }

        .summary-label {
            font-size: 12px;
            color: #94a3b8;
        }

        .task-list {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .task-item {
            background: rgba(30, 41, 59, 0.8);
            border-left: 4px solid #60a5fa;
            padding: 16px;
            border-radius: 6px;
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 12px;
        }

        .task-item.high-priority {
            border-left-color: #ef4444;
        }

        .task-item.medium-priority {
            border-left-color: #f59e0b;
        }

        .task-item.low-priority {
            border-left-color: #94a3b8;
        }

        .task-content {
            flex: 1;
        }

        .task-title {
            font-weight: 600;
            color: #f1f5f9;
            margin-bottom: 4px;
            font-size: 14px;
        }

        .task-description {
            font-size: 12px;
            color: #cbd5e1;
            margin-bottom: 6px;
        }

        .task-meta {
            display: flex;
            gap: 12px;
            font-size: 11px;
            color: #94a3b8;
        }

        .task-status {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 10px;
            font-weight: 600;
            text-transform: uppercase;
            background: rgba(96, 165, 250, 0.2);
            color: #60a5fa;
            white-space: nowrap;
        }

        .task-status.in-progress {
            background: rgba(16, 185, 129, 0.2);
            color: #10b981;
        }

        .task-status.pending {
            background: rgba(245, 158, 11, 0.2);
            color: #f59e0b;
        }

        .links-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
            gap: 12px;
        }

        .link-card {
            background: rgba(30, 41, 59, 0.8);
            border: 1px solid #334155;
            padding: 16px;
            border-radius: 8px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .link-card:hover {
            border-color: #60a5fa;
            background: rgba(30, 41, 59, 0.95);
            transform: translateY(-4px);
        }

        .link-icon {
            font-size: 24px;
        }

        .link-name {
            font-size: 13px;
            font-weight: 600;
            color: #f1f5f9;
        }

        .refresh-btn {
            background: #60a5fa;
            color: #0f172a;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            font-size: 12px;
            transition: all 0.3s ease;
        }

        .refresh-btn:hover:not(:disabled) {
            background: #3b82f6;
            transform: scale(1.05);
        }

        .refresh-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: #94a3b8;
        }

        @media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .project-grid {
                grid-template-columns: 1fr;
            }

            header {
                flex-direction: column;
                align-items: flex-start;
                gap: 12px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div class="logo">
                <span class="logo-emoji">üê¶‚Äçüî•</span>
                <span>Wingman</span>
            </div>
            <div style="display: flex; align-items: center; gap: 16px;">
                <div class="last-updated">
                    Last updated: <span id="lastUpdated">--:--</span>
                </div>
                <button class="refresh-btn" onclick="refreshDashboard()">Refresh</button>
            </div>
        </header>

        <!-- Stats -->
        <div class="stats-grid" id="stats">
            <div class="loading">Loading stats...</div>
        </div>

        <!-- Current Task -->
        <div class="section" id="currentTaskSection">
            <div class="section-title">Current Task</div>
            <div id="currentTask" class="loading">Loading...</div>
        </div>

        <!-- Quick Tasks -->
        <div class="section">
            <div class="section-title">Quick Tasks</div>
            <div id="tasksSection">
                <div class="loading">Loading tasks...</div>
            </div>
        </div>

        <!-- Quick Links -->
        <div class="section">
            <div class="section-title">Quick Links</div>
            <div id="linksSection">
                <div class="loading">Loading links...</div>
            </div>
        </div>

        <!-- Active Projects -->
        <div class="section">
            <div class="section-title">Active Projects</div>
            <div class="project-grid" id="projects">
                <div class="loading">Loading projects...</div>
            </div>
        </div>

        <!-- Recent Completions -->
        <div class="section">
            <div class="section-title">Recent Completions</div>
            <div class="completion-list" id="completions">
                <div class="loading">Loading completions...</div>
            </div>
        </div>

        <!-- Timeline -->
        <div class="section">
            <div class="section-title">Activity Timeline</div>
            <div class="timeline" id="timeline">
                <div class="loading">Loading timeline...</div>
            </div>
        </div>

        <!-- Well Files -->
        <div class="section">
            <div class="section-title">Rig Well Files</div>
            <div id="wellsSection">
                <div class="loading">Loading well files...</div>
            </div>
        </div>
    </div>

    <script>
        async function loadDashboard() {
            try {
                const response = await fetch('./activity.json');
                const data = await response.json();

                // Update last updated time
                const lastUpdated = new Date(data.lastUpdated);
                document.getElementById('lastUpdated').textContent = 
                    lastUpdated.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });

                // Load stats
                loadStats(data.stats);

                // Load current task
                loadCurrentTask(data.currentTask);

                // Load projects
                loadProjects(data.activeProjects);

                // Load completions
                loadCompletions(data.recentCompletions);

                // Load timeline
                loadTimeline(data.timeline);

                // Load wells
                loadWells();

                // Load tasks
                loadTasks();

                // Load links
                loadLinks();

            } catch (error) {
                console.error('Error loading dashboard:', error);
                document.body.innerHTML += '<div style="color: #ef4444; text-align: center; margin-top: 20px;">Error loading dashboard. Make sure activity.json is in the same directory.</div>';
            }
        }

        async function loadTasks() {
            try {
                const response = await fetch('./tasks.json');
                const data = await response.json();

                const html = data.tasks.map(task => {
                    const dueDate = new Date(task.dueDate);
                    const today = new Date();
                    const daysUntil = Math.ceil((dueDate - today) / (1000 * 60 * 60 * 24));
                    const dueText = daysUntil === 0 ? 'Due today' : daysUntil === 1 ? 'Due tomorrow' : `Due in ${daysUntil} days`;

                    return `
                        <div class="task-item ${task.priority}-priority">
                            <div class="task-content">
                                <div class="task-title">${task.title}</div>
                                <div class="task-description">${task.description}</div>
                                <div class="task-meta">
                                    <span>${dueText}</span>
                                </div>
                            </div>
                            <span class="task-status ${task.status}">${task.status}</span>
                        </div>
                    `;
                }).join('');

                document.getElementById('tasksSection').innerHTML = `<div class="task-list">${html}</div>`;
            } catch (error) {
                console.error('Error loading tasks:', error);
                document.getElementById('tasksSection').innerHTML = '<div style="color: #94a3b8;">Unable to load tasks.</div>';
            }
        }

        function loadLinks() {
            const links = [
                { name: 'CREXI', icon: 'üè¢', url: 'https://www.crexi.com' },
                { name: 'OpticsRE', icon: '‚òÄÔ∏è', url: 'https://www.opticsre.com' },
                { name: 'Google Drive', icon: 'üìÅ', url: 'https://drive.google.com' },
                { name: 'AWS Console', icon: '‚òÅÔ∏è', url: 'https://aws.amazon.com/console' },
                { name: 'ClawHub Skills', icon: 'üéØ', url: 'https://clawhub.ai/skills' },
                { name: 'OpenClaw', icon: 'ü¶û', url: 'http://localhost:18789' }
            ];

            const html = links.map(link => `
                <a href="${link.url}" target="_blank" class="link-card" title="${link.name}">
                    <div class="link-icon">${link.icon}</div>
                    <div class="link-name">${link.name}</div>
                </a>
            `).join('');

            document.getElementById('linksSection').innerHTML = `<div class="links-grid">${html}</div>`;
        }

        async function loadWells() {
            try {
                const response = await fetch('./wells.json');
                const data = await response.json();

                // Load summary
                const summaryHtml = `
                    <div class="wells-summary">
                        <div class="summary-stat">
                            <div class="summary-value">${data.summary.totalWells}</div>
                            <div class="summary-label">Total Wells</div>
                        </div>
                        <div class="summary-stat">
                            <div class="summary-value">${data.summary.documentsLoaded}</div>
                            <div class="summary-label">Documents</div>
                        </div>
                        <div class="summary-stat">
                            <div class="summary-value">${data.summary.completionRate}</div>
                            <div class="summary-label">Completion</div>
                        </div>
                    </div>
                `;

                // Load wells grid
                const wellsHtml = data.wells.map(well => `
                    <div class="well-card">
                        <div class="well-header">
                            <div class="well-name">${well.well}</div>
                            <span class="well-status ${well.status}">${well.status}</span>
                        </div>
                        ${well.documents.length > 0 ? `
                            <div class="well-docs">
                                ${well.documents.map(doc => `
                                    <div class="doc-item">
                                        <span class="doc-type">${doc.type}</span>
                                        <span class="doc-filename">${doc.filename}</span>
                                        <div class="doc-meta">${doc.size} ‚Ä¢ ${new Date(doc.date).toLocaleDateString()}</div>
                                    </div>
                                `).join('')}
                            </div>
                        ` : `
                            <div style="color: #94a3b8; font-size: 12px; margin-top: 12px;">No documents uploaded yet</div>
                        `}
                    </div>
                `).join('');

                document.getElementById('wellsSection').innerHTML = summaryHtml + '<div class="wells-grid" style="margin-top: 20px;">' + wellsHtml + '</div>';
            } catch (error) {
                console.error('Error loading wells:', error);
                document.getElementById('wellsSection').innerHTML = '<div style="color: #94a3b8;">Unable to load well files.</div>';
            }
        }

        function loadStats(stats) {
            const statsHtml = `
                <div class="stat-card">
                    <div class="stat-label">Tasks Completed</div>
                    <div class="stat-value">${stats.tasksCompleted}</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Active Projects</div>
                    <div class="stat-value">${stats.activeProjects}</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Uptime</div>
                    <div class="stat-value">${stats.uptime}</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Avg Response</div>
                    <div class="stat-value">${stats.responseTime}</div>
                </div>
            `;
            document.getElementById('stats').innerHTML = statsHtml;
        }

        function loadCurrentTask(task) {
            const html = `
                <div class="current-task">
                    <div class="task-title">${task.title}</div>
                    <div class="task-status">${task.status.toUpperCase()}</div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: ${task.progress}%"></div>
                    </div>
                    <div style="margin-top: 12px; font-size: 12px; color: #94a3b8;">
                        Progress: ${task.progress}% ‚Äî ETA: ${new Date(task.estimatedCompletion).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}
                    </div>
                </div>
            `;
            document.getElementById('currentTask').innerHTML = html;
        }

        function loadProjects(projects) {
            const html = projects.map(project => `
                <div class="project-card">
                    <div class="project-name">${project.name}</div>
                    <span class="project-status ${project.status}">${project.status}</span>
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 12px;">
                        <span style="font-size: 12px; color: #94a3b8;">Progress</span>
                        <span style="font-size: 12px; font-weight: 600; color: #60a5fa;">${project.progress}%</span>
                    </div>
                    <div class="progress-bar" style="margin-bottom: 12px;">
                        <div class="progress-fill" style="width: ${project.progress}%"></div>
                    </div>
                    <div class="project-description">${project.description}</div>
                    <div class="next-steps">
                        <strong>Next Steps:</strong>
                        <ul>${project.nextSteps.map(step => `<li>${step}</li>`).join('')}</ul>
                    </div>
                </div>
            `).join('');
            document.getElementById('projects').innerHTML = html;
        }

        function loadCompletions(completions) {
            const html = completions.map(completion => {
                const date = new Date(completion.completedAt);
                const timeAgo = getTimeAgo(date);
                return `
                    <div class="completion-item">
                        <div class="completion-title">‚úì ${completion.title}</div>
                        <div class="completion-time">${timeAgo}</div>
                        <div class="completion-description">${completion.description}</div>
                    </div>
                `;
            }).join('');
            document.getElementById('completions').innerHTML = html;
        }

        function loadTimeline(timeline) {
            const html = timeline.map(day => `
                <div class="timeline-item">
                    <div class="timeline-date">${new Date(day.date).toLocaleDateString('en-US', { weekday: 'long', month: 'short', day: 'numeric' })}</div>
                    <div class="timeline-events">
                        ${day.events.map(event => `<div class="timeline-event">${event}</div>`).join('')}
                    </div>
                </div>
            `).join('');
            document.getElementById('timeline').innerHTML = html;
        }

        function getTimeAgo(date) {
            const now = new Date();
            const seconds = Math.floor((now - date) / 1000);
            
            if (seconds < 60) return 'just now';
            if (seconds < 3600) return `${Math.floor(seconds / 60)}m ago`;
            if (seconds < 86400) return `${Math.floor(seconds / 3600)}h ago`;
            return `${Math.floor(seconds / 86400)}d ago`;
        }

        function refreshDashboard() {
            const btn = document.querySelector('.refresh-btn');
            btn.textContent = 'Refreshing...';
            btn.disabled = true;
            
            setTimeout(() => {
                loadDashboard();
                btn.textContent = 'Refresh';
                btn.disabled = false;
            }, 500);
        }

        // Load on page load
        loadDashboard();

        // Auto-refresh every 30 seconds
        setInterval(loadDashboard, 30000);
    </script>
</body>
</html>
